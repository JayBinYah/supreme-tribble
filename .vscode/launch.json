{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Main",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/python/main.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "C: Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/c/main",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src/c",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build:c",
      "miDebuggerPath": "/usr/bin/gdb",
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "MIMode": "gdb",
        "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe"
      }
    }
  ]
}
